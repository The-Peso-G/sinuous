{
  "name": "sinuous",
  "private": true,
  "version": "0.0.0",
  "description": "ðŸ§¬ Small, fast, reactive render engine",
  "workspaces": {
    "packages": [
      "packages/*",
      "site/*",
      "site/content/**/*"
    ]
  },
  "scripts": {
    "lint": "eslint 'packages/{*,*/*,}/src/**/*.js'",
    "format": "prettier --write 'packages/**/{src,test}/**/*.js' 'scripts/**/*.js' '**/*.md' '!**/build/**' '!**/tape/**' '!**/htm/**' '!**/babel-plugin-htm/**' '!**/site/**'",
    "build-tape": "browserify scripts/tape/src.js --standalone tape -o scripts/tape/dist.js",
    "test": "cross-env COVERAGE=true yarn test:htm && karma start",
    "test:htm": "tape -r esm packages/sinuous/htm/test/*.js | faucet",
    "test:performance": "PERSIST=true time node --expose-gc packages/sinuous/observable/test/perf/index.js",
    "coverage": "codecov",
    "build": "rollup -c scripts/rollup/config.js --silent",
    "watch": "rollup -wc scripts/rollup/config.js --silent",
    "serve": "(cd site && hugo serve --ignoreCache)",
    "start": "run-p watch serve",
    "http": "http-server -c-1 -p 8000 . ",
    "docs": "node scripts/docs.js && yarn format:docs",
    "format:docs": "prettier --write '**/*.md'"
  },
  "repository": "luwes/sinuous",
  "keywords": [
    "functional",
    "reactive",
    "declarative"
  ],
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luwes/sinuous/issues"
  },
  "homepage": "https://github.com/luwes/sinuous#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "ansi-colors": "^4.1.1",
    "babel-eslint": "^10.0.2",
    "browserify": "^16.5.0",
    "codecov": "^3.6.3",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "esm": "^3.2.25",
    "faucet": "^0.0.1",
    "fs-extra": "^8.1.0",
    "http-server": "^0.12.1",
    "ispy": "^0.1.2",
    "jsdoc-to-markdown": "^5.0.3",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.3",
    "karma-sauce-launcher": "^1",
    "karma-tap": "^4.1.4",
    "karma-tap-pretty-reporter": "^4.2.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "observable": "^2.1.4",
    "prettier": "^1.19.1",
    "ramda": "^0.26.1",
    "rollup": "^1.31.0",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-gzip": "^2.2.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size": "^0.2.1",
    "rollup-plugin-terser": "^5.2.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.13.0"
  }
}
